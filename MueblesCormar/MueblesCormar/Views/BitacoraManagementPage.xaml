<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MueblesCormar.Views.BitacoraManagementPage">
    <ContentPage.Content>
        <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="Start">

            <Label Text="Opciones (Administrar Bitácora)" 
                       Margin="40"
                       HorizontalOptions="CenterAndExpand"
                       HorizontalTextAlignment="Center"
                       VerticalOptions="CenterAndExpand" 
                       FontSize="Large"
                       TextColor="White"
                       />

            <Grid RowSpacing="20" ColumnSpacing="20" Padding="0,20,0,0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" 
                            x:Name="BtnVerBitacora"
                            Text="Ver Bitácora"
                            HeightRequest="150"
                            WidthRequest="150"
                            FontSize="18"
                            HorizontalOptions="Center"
                            CornerRadius="20" BackgroundColor="#3B3B3C" Margin="0,0,0,5"
                            BorderWidth="2" BorderColor="#2399D4" TextColor="White"
                            Clicked="BtnVerBitacora_Clicked">

                    <Button.Triggers>
                        <Trigger TargetType="Button" Property="IsPressed" Value="True">
                            <Setter Property="BackgroundColor" Value="#2399D4"/>
                            <Setter Property="TextColor" Value="#D5CDCD"/>
                        </Trigger>
                    </Button.Triggers>
                </Button>


                <Button Grid.Row="0" Grid.Column="1" 
                            x:Name="BtnAgregarBitacora"
                            Text="Agregar Bitácora"
                            HeightRequest="150"
                            WidthRequest="150"
                            FontSize="18"
                            HorizontalOptions="Center"
                            CornerRadius="20" BackgroundColor="#3B3B3C" Margin="0,0,0,5"
                            BorderWidth="2" BorderColor="#2399D4" TextColor="White"
                            Clicked="BtnAgregarBitacora_Clicked">

                    <Button.Triggers>
                        <Trigger TargetType="Button" Property="IsPressed" Value="True">
                            <Setter Property="BackgroundColor" Value="#2399D4"/>
                            <Setter Property="TextColor" Value="#D5CDCD"/>
                        </Trigger>
                    </Button.Triggers>
                </Button>


                <Button Grid.Row="1" Grid.Column="0" 
                            x:Name="BtnModificarBitacora"
                            Text="Modificar Bitácora"
                            HeightRequest="150"
                            WidthRequest="150"
                            FontSize="18"
                            HorizontalOptions="Center"
                            CornerRadius="20" BackgroundColor="#3B3B3C" Margin="0,0,0,5"
                            BorderWidth="2" BorderColor="#2399D4" TextColor="White"
                            Clicked="BtnModificarBitacora_Clicked">

                    <Button.Triggers>
                        <Trigger TargetType="Button" Property="IsPressed" Value="True">
                            <Setter Property="BackgroundColor" Value="#2399D4"/>
                            <Setter Property="TextColor" Value="#D5CDCD"/>
                        </Trigger>
                    </Button.Triggers>
                </Button>


                <Button Grid.Row="1" Grid.Column="1" 
                            x:Name="BtnEliminarBitacora"
                            Text="Eliminar Bitácora"
                            HeightRequest="150"
                            WidthRequest="150"
                            FontSize="18"
                            HorizontalOptions="Center"
                            CornerRadius="20" BackgroundColor="#3B3B3C" Margin="0,0,0,5"
                            BorderWidth="2" BorderColor="#2399D4" TextColor="White"
                            Clicked="BtnEliminarBitacora_Clicked">

                    <Button.Triggers>
                        <Trigger TargetType="Button" Property="IsPressed" Value="True">
                            <Setter Property="BackgroundColor" Value="#2399D4"/>
                            <Setter Property="TextColor" Value="#D5CDCD"/>
                        </Trigger>
                    </Button.Triggers>
                </Button>


            </Grid>

        </FlexLayout>
    </ContentPage.Content>
</ContentPage>