<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MueblesCormar.Views.Admin.Employee_Pages.ShowEmployee"
             BackgroundColor="#3B3B3C">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>

                <Label Text="Lista de Empleados"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                Padding="0,20,0,10"
                FontSize="Title"
                TextColor="White"/>


                <ListView x:Name="LstEmpleado" RowHeight="100" ItemTapped="LstEmpleado_ItemTapped">

                    <ListView.ItemTemplate>
                        <DataTemplate>

                            <TextCell Text="{Binding Nombre}" Detail="{Binding Email}"/>

                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>