<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MueblesCormar.Views.Admin.ProvInven_Pages.ShowProvInven">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>

                <Label Text="Lista de Proveedores"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                Padding="0,20,0,10"
                FontSize="Large"
                TextColor="#282424"/>


                <ListView x:Name="LstProveedorInventario" RowHeight="100" ItemTapped="LstProveedorInventario_ItemTapped">

                    <ListView.ItemTemplate>
                        <DataTemplate>

                            <ImageCell Text="{Binding NombreProducto}"
                                       Detail="{Binding Idproducto}"/>

                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>