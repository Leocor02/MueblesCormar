<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MueblesCormar.Views.Admin.Inventory_Pages.ShowInventory"
             BackgroundColor="#3B3B3C">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>

                <Label Text="Lista del Inventario"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                Padding="0,20,0,10"
                FontSize="Title"
                TextColor="White"/>


                <ListView x:Name="LstInventario" RowHeight="100" ItemTapped="LstInventario_ItemTapped">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            
                            <ImageCell TextColor="Green" Text="{Binding Nombre}"
                                       Detail="{Binding Descripcion}"
                                       ImageSource="{Binding ImagenProducto}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>