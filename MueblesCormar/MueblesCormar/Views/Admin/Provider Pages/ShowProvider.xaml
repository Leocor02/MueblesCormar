<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MueblesCormar.Views.Admin.Porvider_Pages.ShowProvider">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>

                <Label Text="Lista de Proveedores"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                Padding="0,20,0,10"
                FontSize="Title"
                TextColor="White"/>


                <ListView x:Name="LstProveedor" RowHeight="100" ItemTapped="LstProveedor_ItemTapped">

                    <ListView.ItemTemplate>
                        <DataTemplate>

                            <ImageCell Text="{Binding Nombre}"
                                       Detail="{Binding Direccion}"/>

                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>