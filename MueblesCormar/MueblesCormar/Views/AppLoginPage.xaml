<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MueblesCormar.Views.AppLoginPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Padding="50,50,50,50" VerticalOptions="Center">
            <Entry x:Name="TxtNombreUsuario" Placeholder="Email de usuario" FontSize="25" Keyboard="Email"/>
            <Entry x:Name="TxtContraseña" Placeholder="Contraseña" IsPassword="True" FontSize="25" Keyboard="Default"/>

            <Switch x:Name="SwMostrarContraseña" IsToggled="False" Toggled="CmdMostrarContraseña"/>

            <Button x:Name="BtnIniciarSesion" Text="Iniciar Sesión" FontSize="25" CornerRadius="20" BackgroundColor="#1DBEB5"/>
            <Button x:Name="BtnRegistrarse" Text="Registrarse" FontSize="25" CornerRadius="20" BackgroundColor="#1DBEB5"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>