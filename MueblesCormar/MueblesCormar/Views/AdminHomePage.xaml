<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MueblesCormar.Views.AdminHomePage">
    <ContentPage.Content>
        <ScrollView>

            <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="Start" BackgroundColor="#BECFE3">

                <Image Source="LogoMC" Margin="0,10,0,0"/>

                <Grid RowSpacing="45" Padding="0,20,0,0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

   

                    <Button Grid.Row="0" Text="Inventario"
                            FontSize="17" 
                            CornerRadius="5" 
                            HeightRequest="70"
                            WidthRequest="220"
                            HorizontalOptions="Center"
                            BackgroundColor="#094AC1"
                            BorderWidth="1"
                            BorderColor="#0AADAD"/>

                    <Button Grid.Row="1" Text="Proveedores"
                            FontSize="17" 
                            CornerRadius="5" 
                            HeightRequest="70"
                            WidthRequest="220"
                            HorizontalOptions="Center"
                            BackgroundColor="#094AC1"
                            BorderWidth="1"
                            BorderColor="Aqua"/>

                    <Button Grid.Row="2" Text="Empleados"
                            FontSize="17" 
                            CornerRadius="5" 
                            HeightRequest="70"
                            WidthRequest="220"
                            HorizontalOptions="Center"
                            BackgroundColor="#094AC1"
                            BorderWidth="1"
                            BorderColor="Aqua"/>

                    <Button Grid.Row="3" Text="Bitácora"
                            FontSize="17" 
                            CornerRadius="5" 
                            HeightRequest="70"
                            WidthRequest="220"
                            HorizontalOptions="Center"
                            BackgroundColor="#094AC1"
                            BorderWidth="1"
                            BorderColor="Aqua"/>




                </Grid>
                
            </FlexLayout>


        </ScrollView>
    </ContentPage.Content>
</ContentPage>